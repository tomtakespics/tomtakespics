---
const images = [
  { src: "/home-about/home1.jpg", alt: "Thomas Underwood's photo", width: 2560, height: 1920 },
  { src: "/home-about/home2.jpg", alt: "Another Thomas Underwood shot", width: 2560, height: 1707 },
  { src: "/home-about/home3.jpg", alt: "Visit to Ely", width: 2560, height: 1707, link: "https://pics.tomstuff.uk/blog/trip-to/ely/" },
  { src: "/home-about/home4.jpg", alt: "Trip to London", width: 8160, height: 6120, link: "https://pics.tomstuff.uk/blog/trip-to/london/" },
  { src: "/home-about/home5.jpg", alt: "Another gallery image", width: 2560, height: 1920 },
  { src: "/home-about/home6.jpg", alt: "Final gallery image", width: 2560, height: 1707 },
];
---

<style>
.masonry {
  column-count: 3;
  column-gap: 1rem;
  margin: 0 auto 5px;
}

.masonry-item {
  break-inside: avoid;
  margin-bottom: 1rem;
  border-radius: 1rem;
  overflow: hidden;
}

.masonry-item img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 0.5rem;
}
@media (max-width: 720px) {
  .masonry {
    column-count: 1;
  }
}
</style>

<div class="masonry" style="padding: 0 1rem;">
  {images.map((img) => (
    <div class="masonry-item">
      {img.link ? (
        <a href={img.link} target="_blank" rel="noopener noreferrer">
          <img src={img.src} alt={img.alt} loading="lazy" />
        </a>
      ) : (
        <img src={img.src} alt={img.alt} loading="lazy" />
      )}
    </div>
  ))}
</div>
